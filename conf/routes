# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()


# authorization / authentication

GET     /auth/login                 controllers.auth.AuthController.login()
GET     /auth/loggedin              controllers.auth.AuthController.loggedin()

POST    /auth/authentication        controllers.auth.AuthController.authenticate()
POST    /auth/deauthentication      controllers.auth.AuthController.deauthenticate()


GET     /users                      controllers.users.UsersController.get(id:Long)
POST    /users                      controllers.users.UsersController.create()
PUT     /users                      controllers.users.UsersController.update(id:Long)
DELETE  /users                      controllers.users.UsersController.remove(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
